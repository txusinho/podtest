{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true,
        "jasmine": true

    },
    "rules": {
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2,
        "no-console": [2],
        "quotes": [1, "double"],
        "new-cap": [2],
        "no-underscore-dangle": [0],
        "no-multi-spaces": [0],
        "no-spaced-func": [0],
        "no-multiple-empty-lines": [2],
        "no-trailing-spaces": [2],
        "max-statements": [2, 22],
        "complexity": [2, 8],
        "semi": [2, "always"]

    },
    "globals": {
        "sinon": true,
        "assert": true
    },
    "plugins": [
        "chai-friendly"
    ]
}
